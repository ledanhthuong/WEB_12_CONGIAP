
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HIU</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@3.0.5/dist/js.cookie.min.js"></script>
    <script src="~/lib/jquery-3.7.1.js"></script>
    
    <link rel="stylesheet" href="~/ChatGPT_12_CONGIAP.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="header-container">
            <div class="logo" onclick="toggleSidebar()">
                <img src="./image/HIU_Final.png" alt="Logo">
                <span class="logo-text">Cuộc Thi Vẽ Tranh Cùng AI</span>
            </div>

            <nav class="nav-links">
                <a href="./Home">Trang chủ</a>
                <a href="./Home#contest-rules">Thể lệ cuộc thi</a>
                <a href="./Home#guide-section">Hướng dẫn</a>
            </nav>


            <div class="item"></div>
            <div class="user-menu" id="user-menu">
                <div id="username" class="user-info">
                    <i class="fas fa-user-circle" style="font-size: 24px !important; color: red;"></i>
                    <span>Guest</span> ▼
                </div>

                <span id="teamName" style="margin-left: 10px;"></span>
                <div class="dropdown" id="dropdown">
                    <a href="#" onclick="viewProfile()">Xem Thông Tin</a>
                    <a href="#" onclick="viewGameHistory()">Xem Lịch Sử</a>
                    <a href="#" onclick="dangXuat()">Đăng Xuất</a>
                </div>
            </div>
            <div class="menu-icon" onclick="toggleSidebar()">&#9776;</div>
        </div>
    </header>

    <div class="sidebar" id="sidebar">
        <div class="close-btn" onclick="toggleSidebar()">&times;</div>
        <a href="#">Trang chủ</a>
        <a href="#contest-rules">Thể lệ cuộc thi</a>
        <a href="#guide-section">Hướng dẫn</a>
    </div>

    <div class="container">
        
            @RenderBody()
       
    </div>

    <footer class="footer">
        <div class="footer-container">
            <div class="footer-left">
                <h2>Cuộc Thi Vẽ Tranh Cùng AI</h2>
                <p>Trường Đại học Quốc tế Hồng Bàng</p>
                <ul>

                    <li>
                        <strong>Trường Đại học Quốc tế Hồng Bàng Cơ Sở 1</strong> 215 Điên Biên Phủ, P.7, Q.Bình Thạnh,
                        TP.HCM
                    </li>
                </ul>
            </div>

            <div class="footer-center">
                <ul>
                    <li><a href="#">Trang chủ</a></li>
                    <li><a href="#">Thể lệ cuộc thi</a></li>
                    <li><a href="#">Hướng dẫn </a></li>
                </ul>
            </div>

            <div class="footer-right">
                <h3>Liên hệ</h3>
                <p><i class="fa fa-phone"></i> +012-345-6789</p>
                <p><i class="fa fa-envelope"></i> hiu@student.edu.vn</p>
                <p><i class="fa fa-facebook"></i> <a href="#">Fanpage - HIU</a></p>
            </div>
        </div>
        <div class="footer-bottom">
            <p>Bản quyền © 2024 HIU. Đã đăng ký bản quyền.</p>
        </div>
    </footer>
    <button type="button" onclick="scrollToTop()" id="toTopBtn" aria-label="Quay lại đầu trang">
        <svg class="svgIcon" viewBox="0 0 384 512">
            <path d="M214.6 41.4c-12.5-12.5-32.8-12.5-45.3 0l-160 160c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L160 141.2V448c0 17.7 14.3 32 32 32s32-14.3 32-32V141.2L329.4 246.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3l-160-160z"></path>
        </svg>
    </button>



    <script src="~/lib/jquery-3.7.1.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script> 
    <script src="~/js/main.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
